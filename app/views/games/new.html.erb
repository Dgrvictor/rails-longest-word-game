<div class="ms-3 me-3 mt-2">
  <h1 class="d-flex justify-content-center">New game</h1>

  <ul class="d-flex text-decoration-none list-unstyled justify-content-center">
    <% @letters.each do |letter| %>
    <li class="ms-0 mx-2 p-3 bg-info shadow text-white border"><%= letter.upcase %></li>
    <% end %>
  </ul>
  <form class="input-group mb-3" action="/score" method="post" data-turbo="false">
    <input class="form-control" type="text" name="user-input">
    <input type="text" name="grid" hidden=true value="<%= @letters.join %>">
    <input class="btn btn-outline-secondary" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
